<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_eod_rental_order_list" model="ir.ui.view">
        <field name="name">view_eod_rental_order_list</field>
        <field name="model">eod.rental.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="order_number"/>
                <field name="bike_id"/>
                <field name="customer_id"/>
                <field name="number_plate"/>
                <field name="period"/>
            </list>
        </field>
    </record>
    <record id="view_eod_rental_order_form" model="ir.ui.view">
        <field name="name">view_eod_rental_order_form</field>
        <field name="model">eod.rental.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_approval_request" invisible="state != 'draft'" string="Request For Approval"
                            type="object" class="btn-primary"/>
                    <button name="button_approve" invisible="state != 'to_approve'" string="Approve"
                            type="object" class="btn-primary" groups="eod_rental_order.group_bike_rental_manager"/>
                    <button name="button_reject" invisible="state != 'to_approve'" string="Reject" groups="eod_rental_order.group_bike_rental_manager"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>

                    <field name="state" widget="statusbar" options="{'clickable': '1'}"
                           statusbar_visible="draft,to_approve,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="order_number"/>
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="name" invisible="1"/>
                            <field name="bike_id"/>
                            <field name="shop_id"/>
                            <field name="customer_id"/>
                            <field name="number_plate"/>
                            <field name="period"/>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="rental_date"/>
                            <field name="return_date"/>
                            <field name="rate" />
                            <field name="spent_period"/>
                            <field name="total_amount"/>
                        </group>
                        <notebook>
                            <page name="Other Info">
                                <group>
                                    <field name="description"/>
                                    <field name="reject_reason" invisible="state != 'reject'"/>
                                    <field name="rejected_by" invisible="state != 'reject'"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="view_eod_rental_order_search" model="ir.ui.view">
        <field name="name">view_eod_rental_order_search</field>
        <field name="model">eod.rental.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_number"/>
                <field name="customer_id"/>
                <field name="number_plate"/>
                <field name="rental_date"/>
                <field name="state"/>

                <filter string="Draft" name="filter_draft" domain="[('state','=','draft')]"/>
                <filter string="Approved" name="filter_approved" domain="[('state','=','approved')]"/>
                <filter string="Returned" name="filter_returned" domain="[('state','=','returned')]"/>

                <!--                <group expand="0" string="Group By">-->
                <!--                    <filter string="Customer" name="group_by_customer" context="{'group_by':'customer_id'}"/>-->
                <!--                    <filter string="State" name="group_by_state" context="{'group_by':'state'}"/>-->
                <!--                    <filter string="Rental Date" name="group_by_rental_date" context="{'group_by':'rental_date'}"/>-->
                <!--                </group>-->
            </search>
        </field>
    </record>

    <record id="action_eod_rental_order" model="ir.actions.act_window">
        <field name="name">EOD Rental</field>
        <field name="res_model">eod.rental.order</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_eod_rental_order_root" name="Bike Rental"/>

    <menuitem id="menu_eod_rental_order"
              name="Rental Order"
              sequence="1"
              parent="menu_eod_rental_order_root"
              action="action_eod_rental_order"/>

    <menuitem id="menu_eod_rental_customer"
              name="Customers"
              sequence="10"
              parent="menu_eod_rental_order_root"
              action="account.res_partner_action_customer"/>
</odoo>
