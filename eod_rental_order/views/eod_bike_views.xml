<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id='bikes_view_list' model='ir.ui.view'>
        <field name="name">bike.form.list</field>
        <field name="model">eod.bike</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="type"/>
            </list>
        </field>
    </record>


    <record id='bikes_view_form' model='ir.ui.view'>
        <field name="name">bike.form</field>
        <field name="model">eod.bike</field>
        <field name="arch" type="xml">
            <form>


                <!--                <div class="oe_button_box" name="button_box">-->
                <!--                            <button name="action_open_rental_orders" type="object" class="oe_stat_button" icon="fa-users" help="Groups that apply to the current user">-->
                <!--&lt;!&ndash;                                <field string="Groups" name="groups_count" widget="statinfo"/>&ndash;&gt;-->
                <!--                            </button>-->
                <!--                </div>-->
                <!--                <header>-->
                <!--                    <field name="state" widget="statusbar"/>-->
                <!--                </header>-->
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button string="Orders" class="oe_stat_button" icon="fa-list-ul"
                                name="action_open_rental_orders"
                                type="object">
                            <field name="order_count" string="Orders" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>

                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="number_plate"/>
                            <field name="vin_number"/>
                            <field name="registration_date"/>
                        </group>
                        <group>
                            <field name="type"/>
                            <field name="is_available" decoration-success="is_available == True"
                                   decoration-danger="is_available == False"/>
                            <field name="color"/>
                            <field name="engine_capacity"/>
                            <field name="day_rent"/>
                            <field name="rental_order_ids" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Extra Info" name="extra">
                            <group>
                                <field name="note"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="eod_bike_action" model="ir.actions.act_window">
        <field name="name">Bike</field>
        <field name="res_model">eod.bike</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="eod_configuration_root" name="Configuration" sequence="20" parent="menu_eod_rental_order_root"/>
    <menuitem id="eod_bike_menus"
              name="Bike"
              sequence="21"
              parent="eod_configuration_root"
              action="eod_bike_action"/>
</odoo>