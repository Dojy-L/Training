<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id='bikes_shop_view_list' model='ir.ui.view'>
        <field name="name">bike.shop.list</field>
        <field name="model">bike.shop</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="location"/>
                <field name="phone"/>
                <field name="manager_id"/>
            </list>
        </field>
    </record>


    <record id='bikes_shop_view_form' model='ir.ui.view'>
        <field name="name">bike.shop.form</field>
        <field name="model">bike.shop</field>
        <field name="arch" type="xml">
            <form>
                <!--                <header>-->
                <!--                    <field name="state" widget="statusbar"/>-->
                <!--                </header>-->
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="name"/>
                        </h2>

                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="location"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="manager_id"/>
                            <field name="is_active"/>
                            <field name="note"/>
                            <field name="bike_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="eod_bike_shop_action" model="ir.actions.act_window">
        <field name="name">Bike Shop</field>
        <field name="res_model">bike.shop</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="eod_bike_shop_menus"
              name="Bike Shop"
              sequence="22"
              parent="eod_configuration_root"
              action="eod_bike_shop_action"/>
</odoo>