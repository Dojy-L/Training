<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_bike_request_reject_form" model="ir.ui.view">
        <field name="name">bike.request.reject.form</field>
        <field name="model">bike.request.reject</field>
        <field name="arch" type="xml">
            <form string="Reject Reason">
                <group>
                    <field name="reason"/>
                    <field name="rental_order_id" invisible="0"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_reject" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>