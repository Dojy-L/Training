<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="state" invisible="1"/>
                <!-- Custom filter buttons -->
                <filter string="New" name="filter_new" domain="[('state', 'in', 'new')]"/>
                <filter string="Offer Received" name="filter_offer_received" domain="[('state', '=', 'received')]"/>
                <!-- Custom filter define for give default filter and call it in action context -->
                <filter string="Available" name="available" domain="[('state', '=', ('new','received'))]"/>
                <!-- Dynamic search filters -->
                <field name="living_area" string="Living Area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="name" filter_domain="[('name','ilike',self)]" string="Title"/>
                <!-- Grouping options -->
                <group>
                    <filter string="Post Code" name="group_by_postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sold" type="object" string="Sold" class="btn btn-primary"
                            invisible="state in ('sold','canceled')"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn btn-secondary"
                            invisible="state in ('sold','canceled')"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <!-- Title Section -->
                    <label for="name"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <!-- Tags (Many2many)  and for each tag each color using the option (an integer field defined for color in py)-->
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>

                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="property_type_id" options="{'no_create':True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>

                        </group>
                        <group>
                            <field name="expected_price" required="True"/>
                            <field name="selling_price" readonly="1"/>
                            <field name="best_price"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" widget="radio" options="{'horizontal': true}"
                                       invisible="not garden"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Other Ino">
                            <group>
                                <field name="user_id"/>
                                <field name="partner_id"/>
                            </group>
                        </page>
                        <page string="Offer">
                            <field name="offer_ids" readonly="state in ['accepted', 'sold','canceled']">
                                <list editable="bottom" default_order="price desc"
                                      decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                                    <field name="partner_id"/>
                                    <field name="price" sum="Total Price" widget="monetary"/>
                                    <!--                                     sum="total"-->
                                    <field name="property_id" column_invisible="1"/>
                                    <field name="property_type_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <!-- Inline buttons for offer actions -->
                                    <button name="action_accept" type="object" icon="fa-check"
                                            invisible="status in ('accepted','refused')"/>
                                    <button name="action_reject" type="object" icon="fa-close"
                                            invisible="status in ('accepted','refused')"/>
                                    <field name="status" invisible="0"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Enables communication log & activities -->
                <chatter/>
            </form>
        </field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
<!--            The 'decoration-*' attributes apply conditional row styling-->
<!--             in the list view to visually highlight records-->
<!--             based on their 'state' field-->
            <list decoration-success="state in ('received','accepted')" decoration-bf="state == 'accepted'"
                  decoration-muted="state == 'sold'">
                <field name="name" string="Title"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="bedrooms" optional="show"/>
                <field name="property_type_id"/>
                <field name="expected_price" sum="Total"/>
                <field name="selling_price" sum="Total"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="real_estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="context">{'search_default_available':1}</field>         <!-- Default context activates 'Available' filter (create one filter)-->
        <field name="view_mode">list,form</field>
    </record>

</odoo>