<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

     <template id="books_fine_template" name="Fine Page">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h3>Customer Overdue Fines</h3>
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Total Overdue Fine</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="fines" t-as="fine">
                            <tr>
                                <td><t t-esc="fine['customer'].name"/></td>
                                <td><t t-esc="fine['total_fine']"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>


