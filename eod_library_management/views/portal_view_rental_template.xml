    <template id="portal_my_home_menu_rentals" inherit_id="portal.portal_my_home" name="Rentals Menu">
        <!--        <xpath expr="//div[@id='portal_my_home']" position="inside">-->
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <a t-attf-href="/my/rentals" class="list-group-item list-group-item-action">
                <i class="fa fa-book me-2"></i>My Rentals
            </a>
        </xpath>
    </template>

    <template id="portal_my_rentals_template" name="My Rentals">
        <t t-call="portal.portal_layout">
            <t t-set="title">My Rentals</t>
            <div class="container mt-3">
                <h2>My Rental Orders</h2>
                <table class="table table-hover mt-3">
                    <thead>
                        <tr>
                            <th>Book</th>
                            <th>Rental Date</th>
                            <th>Due Date</th>
                            <th>Status</th>
                            <th>Overdue Fee</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="rentals" t-as="rental">
                            <tr>
                                <td>
                                    <t t-esc="rental.book_id.name"/>
                                </td>
                                <td>
                                    <t t-esc="rental.start_date"/>
                                </td>
                                <td>
                                    <t t-esc="rental.due_date"/>
                                </td>
                                <td>
                                    <t t-esc="rental.state"/>
                                </td>
                                <td>
                                    <t t-esc="rental.overdue_fine or 0"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>


</odoo>